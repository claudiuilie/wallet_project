<header class="masthead bg-wallet text-white container  align-items-center flex-column" style="padding-top: 7em;padding-bottom: 2em;">
            <!--    form data -->
            <div class="card " style="margin: 1%;">
                <div class="card-header text-info border-0">
                    <a href ="/wallet"><button class="btn btn-info "><i class="far fa-arrow-alt-circle-left"></i></button></a>
                </div>
                <div class="card-body text-center ">
                    <form id ="formData" class="was-validated " method="POST" action="/wallet/create" >
                        <div class="form-group ">
                            <label class="text-info" for="formGroupExampleInput">Month</label>
                            <select class="custom-select" required name="month">
                                <option value="">Select month</option>
                                <option value="January">January</option>
                                <option value="February">February</option>
                                <option value="March">March</option>
                                <option value="April">April</option>
                                <option value="May">May</option>
                                <option value="June">June</option>
                                <option value="July">July</option>
                                <option value="August">August</option>
                                <option value="September">September</option>
                                <option value="October">October</option>
                                <option value="November">November</option>
                                <option value="December">December</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="text-info" class="text-info" for="disabledYearInput">Year</label>
                            <input type="number" id="disabledYearInput" class="form-control" name="year" required>
                        </div>
                        <div class="form-group">
                            <label class="text-info" style="color: #1c7430" for="formGroupExampleInput">Income</label>
                            <input type="number" class="form-control" name="income" placeholder="Enter income" required>

                        </div>
                        <button type="button" class="btn btn-info btn-lg btn-block" id="addExtraButton" data-toggle="modal" data-target="#addExtraModal">Add Outcome</button>
                        <button type="submit" class="btn btn-primary btn-lg btn-block" >Submit</button>
                    </form>
                </div>
            </div>

</header>


